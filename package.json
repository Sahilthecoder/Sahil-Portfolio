{
  "name": "sahil-portfolio",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://sahilthecoder.github.io/Sahil-Portfolio/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sahilthecoder/Sahil-Portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/Sahilthecoder/Sahil-Portfolio/issues"
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -t true -m 'Deploy to GitHub Pages [skip ci]'",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:watch": "tsc --noEmit --skipLibCheck --watch",
    "build:vite": "vite build",
    "build": "npm run build:vite",
    "ci:build": "npm run type-check && npm run build:vite",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "start": "vite --host",
    "serve": "vite preview --port 4173",
    "optimize-images": "node scripts/optimize-images.js",
    "clean": "node scripts/cleanup.js",
    "clean:full": "node scripts/cleanup.js && rimraf node_modules",
    "prepare": "[ -z \"$CI\" ] && husky install || echo 'Skipping husky install in CI'",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
